# ==============================
# Normalize line endings
# ==============================
* text=auto

# Force LF endings for code files
*.cs      text eol=lf
*.cshtml  text eol=lf
*.js      text eol=lf
*.ts      text eol=lf
*.css     text eol=lf
*.html    text eol=lf
*.json    text eol=lf
*.xml     text eol=lf
*.md      text eol=lf
*.yml     text eol=lf

# Force CRLF for Windows batch scripts
*.bat     text eol=crlf

# Binary files
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.pdf     binary
*.woff    binary
*.woff2   binary
*.eot     binary
*.ttf     binary
*.mp4     binary
*.mp3     binary
*.dll     binary
*.exe     binary
*.zip     binary

