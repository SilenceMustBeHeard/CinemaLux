@model IEnumerable<CinemaApp.Web.ViewModels.WatchList.WatchListViewModel>

@{
    ViewData["Title"] = "My Watchlist";
}

<h2 class="mb-4">❤️ My Watchlist</h2>

@if (!Model.Any())
{
    <p>You have no movies in your watchlist.</p>
}
else
{
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@movie.ImageUrl" class="card-img-top" />

                    <div class="card-body">
                        <h6 class="fw-bold">@movie.Title</h6>
                        <p class="text-muted">@movie.Genre</p>

                        <a asp-controller="Movies"
                           asp-action="Details"
                           asp-route-id="@movie.MovieId"
                           class="btn btn-sm btn-primary">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
