@model IEnumerable<CinemaApp.Web.ViewModels.WatchList.WatchListViewModel>

@{
    ViewData["Title"] = "My Watchlist";
}

<div class="container my-5">
    <h2 class="text-center text-warning fw-bold mb-4">
        🎬 My Watchlist
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Your watchlist is empty.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">

                        @* Movie Image *@
                        <img src="@(movie.ImageUrl ?? "/images/no-image.png")"
                             class="card-img-top"
                             alt="@movie.Title poster"
                             style="height: 320px; object-fit: cover;" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@movie.Title</h5>

                            <p class="card-text text-muted mb-1">
                                <strong>Genre:</strong> @movie.Genre
                            </p>
                            <p class="card-text text-muted mb-3">
                                <strong>Year:</strong> @movie.ReleaseDate
                            </p>

                            <div class="mt-auto d-flex justify-content-between">
                                <a asp-controller="Movies"
                                   asp-action="Details"
                                   asp-route-id="@movie.MovieId"
                                   class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>

                                <form asp-controller="WatchList"
                                      asp-action="Remove"
                                      asp-route-id="@movie.MovieId"
                                      method="post">
                                    <button type="submit"
                                            class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </form>
                            </div>

                            @* Trailer button (optional) *@
                            @if (!string.IsNullOrWhiteSpace(movie.TrailerUrl))
                            {
                                <a href="@movie.TrailerUrl"
                                   target="_blank"
                                   class="btn btn-sm btn-outline-warning mt-2 w-100">
                                    ▶ Watch Trailer
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
