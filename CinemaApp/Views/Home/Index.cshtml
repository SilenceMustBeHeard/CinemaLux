@{
    ViewData["Title"] = "Home Page";
}

<!-- =========================
     Hero Section
========================= -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-text">
        Welcome to CinemaLux
        <div class="hero-subtext">
            Immerse yourself in a world of cinematic luxury.<br />
            Relax in premium leather seats with golden accents,<br />
            enjoy massive high-tech screens,<br />
            and experience a starry ceiling that turns every movie into an unforgettable journey.
        </div>
        <a asp-controller="Movies"
           asp-action="Index"
           class="hero-button">
            Explore Movies
        </a>
    </div>
</div>

<!-- =========================
     Feature Cards
========================= -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card card-dark shadow-soft">
                <div class="card-body">
                    <h5 class="card-title text-gold">Premium Seating</h5>
                    <p class="card-text text-muted">
                        Experience ultimate comfort in luxurious leather seats with golden accents.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card card-dark shadow-soft">
                <div class="card-body">
                    <h5 class="card-title text-gold">High-Tech Screens</h5>
                    <p class="card-text text-muted">
                        Enjoy ultra-wide screens with crisp visuals and immersive sound.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card card-dark shadow-soft">
                <div class="card-body">
                    <h5 class="card-title text-gold">Starry Ambience</h5>
                    <p class="card-text text-muted">
                        A mesmerizing ceiling of tiny golden lights creates a magical movie experience.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- =========================
     Featured Movies Section
========================= -->
<div class="container my-5">
    <h2 class="text-gold mb-4 text-center">Featured Movies</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="movie-card">
                <img src="/Images/movie1.jpg" alt="Movie 1 Poster">
                <div class="movie-card-content">
                    <div class="movie-card-title text-gold">The Golden Adventure</div>
                    <div class="movie-card-meta text-muted">Action • 2025</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="movie-card">
                <img src="/Images/movie2.jpg" alt="Movie 2 Poster">
                <div class="movie-card-content">
                    <div class="movie-card-title text-gold">Starry Night</div>
                    <div class="movie-card-meta text-muted">Drama • 2025</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="movie-card">
                <img src="/Images/movie3.jpg" alt="Movie 3 Poster">
                <div class="movie-card-content">
                    <div class="movie-card-title text-gold">Luxury Escape</div>
                    <div class="movie-card-meta text-muted">Thriller • 2025</div>
                </div>
            </div>
        </div>
    </div>
</div>
