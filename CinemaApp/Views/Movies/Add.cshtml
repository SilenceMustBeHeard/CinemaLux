@model CinemaApp.Web.ViewModels.Movie.MovieFormModelCreate

@{
    ViewData["Title"] = "Add New Movie";
}

<div class="container mt-5">
    <h2 class="text-center text-warning fw-bold">Add a New Movie</h2>
    <hr class="mb-4">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Movies" asp-action="Add" method="post" class="bg-dark text-light p-4 rounded shadow-lg">

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Movie Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter movie title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Genre" class="form-label fw-bold">Genre</label>
                    <input asp-for="Genre" class="form-control" placeholder="Enter genre">
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Director" class="form-label fw-bold">Director</label>
                    <input asp-for="Director" class="form-control" placeholder="Enter director name">
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Duration" class="form-label fw-bold">Duration (minutes)</label>
                    <input asp-for="Duration" class="form-control" placeholder="Enter duration">
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReleaseDate" class="form-label fw-bold">Release Date</label>
                    <input asp-for="ReleaseDate" type="date" class="form-control">
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter description" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-bold">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrailerUrl" class="form-label fw-bold">Trailer URL</label>
                    <input asp-for="TrailerUrl" class="form-control" placeholder="Enter trailer URL">
                    <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning w-100 fw-bold">Create Movie</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
