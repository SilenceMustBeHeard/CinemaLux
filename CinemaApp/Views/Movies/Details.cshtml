@using CinemaApp.Web.ViewModels.Movie
@model MovieDetailsViewModel

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-5">
    <div class="row">
        <!-- Poster -->
        <div class="col-md-5">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded shadow"
                 alt="@Model.Title" />
        </div>

        <!-- Movie Info -->
        <div class="col-md-7">
            <div class="d-flex justify-content-between align-items-start">
                <h2 class="fw-bold text-primary mb-3">@Model.Title</h2>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-controller="WatchList"
                          asp-action="Toggle"
                          method="post"
                          class="ms-3">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="movieId" value="@Model.Id" />

                        <button type="submit"
                                class="btn btn-link p-0"
                                style="font-size: 2rem; text-decoration: blink;"
                                title="@(Model.IsInWatchList ? "Remove from Watchlist" : "Add to Watchlist")">
                            @if (Model.IsInWatchList)
                            {
                                <span class="text-danger">❤️</span>
                            }
                            else
                            {
                                <span class="text-danger">🤍</span>
                            }
                        </button>
                    </form>
                }
            </div>

            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Director:</strong> @Model.Director</p>
            <p><strong>Duration:</strong> @Model.Duration minutes</p>

            <hr />

            <h5 class="mt-3">Description</h5>
            <p>@Model.Description</p>

            @if (!string.IsNullOrWhiteSpace(Model.TrailerUrl))
            {
                <div class="mt-4">
                    <h5>Trailer</h5>
                    <div class="ratio ratio-16x9">
                        <iframe src="@Model.TrailerUrl"
                                title="@Model.Title Trailer"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Movies"
           asp-action="Index"
           class="btn btn-secondary">
            ← Back to All Movies
        </a>
    </div>
</div>
