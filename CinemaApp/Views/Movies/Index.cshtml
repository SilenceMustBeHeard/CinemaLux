<div class="container my-5">

    <!-- TempData съобщения -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-gold">Featured Movies</h2>
        @* add new movie button only for admin *@
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Movies" asp-action="Add" class="btn btn-warning fw-bold">
                <i class="bi bi-plus-circle"></i> Add New Movie
            </a>
        }
    </div>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="movie-card fade-in position-relative">
                    <img src="@movie.ImageUrl" alt="@movie.Title Poster" class="img-fluid rounded" />
                    <div class="movie-card-content p-2">
                        <div class="movie-card-title fw-bold">@movie.Title</div>
                        <div class="movie-card-meta text-muted">
                            @movie.Genre • @movie.ReleaseDate

                        </div>

                        <div class="mt-2 d-flex justify-content-between align-items-center">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Details
                            </a>

                            @* Edit/Delete only for admin*@
                            @if (User.IsInRole("Admin"))
                            {
                                <div>
                                    <a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
