@using CinemaApp.Web.ViewModels.Movies
@model IEnumerable<AllMoviesIndexViewModel>

@{
    ViewData["Title"] = "Movies";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-gold">Featured Movies</h2>
        <a asp-controller="Movies" asp-action="Add" class="btn btn-warning fw-bold">
            <i class="bi bi-plus-circle"></i> Add New Movie
        </a>
    </div>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="movie-card fade-in position-relative">
                    <img src="@movie.ImageUrl" alt="@movie.Title Poster" class="img-fluid rounded" />
                    <div class="movie-card-content p-2">
                        <div class="movie-card-title fw-bold">@movie.Title</div>
                        <div class="movie-card-meta text-muted">
                            @movie.Genre • @movie.ReleaseDate
                        </div>

                        <div class="mt-2 d-flex justify-content-between">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-light">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/user.css">
}

@section Scripts
{
    <script>
        document.querySelectorAll('.show-info-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const overlay = btn.closest('.movie-card-overlay');
                overlay?.classList.toggle('show-full-info');
            });
        });
    </script>
}
